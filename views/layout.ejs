<!-- views/layout.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <title>HackerNews Clone</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
<div class="container">
    <table>
        <tbody>
            <tr>
                <td id="td" class="tableHeader"> 
                    <table> <!-- border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px" -->
                        <tbody>
                            <tr>
                                <td> <!-- style="width:18px;padding-right:4px" -->
                                    <a href="/">
                                        <img src="#" width="18" height="18" alt="Hacker news logo">
                                        <!-- src="y18.gif" width="18" height="18" border:1px white solid; display:block"-->
                                    </a>
                                </td>
                                <td> <!-- style="line-height:12pt; height:10px" -->
                                    <span class="pagetop">
                                                    <b class="hnname">
                                                        <a href="/">Hacker News</a>
                                                    </b>
                                        <% routes.forEach(function(route) { %> |
                                        <a href="<%= route.path %>"><%= route.name %></a>
                                        <% }) %>
                                    </span>
                                </td>
                                <td> <!-- style="text-align:right;padding-right:4px" -->
                                    <span class="pagetop">
                                                    <a href="#">login</a>
                                                </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr id="pagespace" title="" style="height:10px"></tr>
            <tr>
                <%- body %>
            </tr>
            <tr>
                <td>
                    &copy; HackerNews Clone by <a href="https://github.com/Vagg-davios">Vagg-Davios</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
</body>
</html>
